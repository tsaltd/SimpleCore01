{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html (without sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/index.html",
            "sourceMaps": true
        },
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/startComponent.html",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        
        },
        {   "type": "chrome",
            "name": "StartComponent",
            "request": "launch",
            "url": "http://localhost:3000/startComponent.html",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "name": "StartComponent file",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/startComponent.html",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        }
    ] 
}