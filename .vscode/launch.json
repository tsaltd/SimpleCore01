{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html (without sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/index.html",
            "sourceMaps": true
        },
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/htmlpage.html",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        }
        
    ] 
}